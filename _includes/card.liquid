<div class="card with-shadow">
    <div class="teaser-card-inner d-flex">
        <div class="row m-0">
            {% if post.teaser_img.size > 0 %}
                <div class="teaser-card-image col-24 col-md-12 order-2" style="background-image: url({{ post.teaser_img }});"></div>
                <div class="teaser-card-text col-24 col-md-12 order-1">
                    <h3 class="fontsize-50 uppercase">{{ post.title }}</h3>
                    <p class="fontsize-22 d-none d-md-block">{{ post.description }}</p>
                    <div class="more-btn-wrap">
                        <a href="{% if post.external_link.size > 0 %}{{ post.external_link }}{% else %}{{ post.link }}{% endif %}" class="event-link more-btn  fade-in animated fadeInUp full-visible">
                            <span class="more-btn-inner"><span>Rrread more!</span></span>
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-xs-24 teaser-card-text ">
                    <h3 class="fontsize-50 uppercase">{{ post.title }}</h3>
                    <p class="fontsize-22">{{ post.description }}</p>
                    <div class="more-btn-wrap">
                        <a href="{% if post.external_link.size > 0 %}{{ post.external_link }}{% else %}{{ post.link }}{% endif %}" class="event-link more-btn  fade-in animated fadeInUp full-visible">
                            <span class="more-btn-inner"><span>Rrread more!</span></span>
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

 