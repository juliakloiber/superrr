<div class="d-block w-100">
    <div class="section fellows {{ include.type }} city-teaser col-24 background-image background-{{ include.index }}">
        <div class="row city-teaser-wrap fade-in">
            <div class="col-24 col-md-12 order-1">
                <div class="batch-wrap fellows">
                    <div class="batch-inner">
                        <object class="img-responsive batch-svg d-none d-md-block" data="" data-src="{{ site.baseurl }}{{ item.img }}" type="image/svg+xml" ></object>
                        <img class="img-responsive lazyload" data-src="{{ site.baseurl }}{{ item.teaser_img }}" />
                    </div>
                </div>
            </div>
            <div class="col-24 col-md-12 order-2 fade-in">
                <div class="event-info-wrap">
                    <h1 class="fellow-name color-ftf-lila mt-4 mt-md-0 mb-3">
                        {{ item.name }}
                    </h1>
                    <div class="fellow-link">
                        <a href="{{ item.project_link }}" target="_blank">{{ item.project }}</a>
                    </div>
                    <p class="fontsize-22 fellow-content mb-5">
                        {{ item.description }}
                    </p>
                    <p class="fontsize-22 d-none d-md-block">{{ item.content | markdownify | strip_html | truncatewords: 50 }}</p>
                    <div class="mt-5 d-flex justify-content-center justify-content-md-start">
                        {% include partials/ftf-pill.liquid text='Rrread more!' href=item.url %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
