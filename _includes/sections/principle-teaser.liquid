<div class="card with-shadow">
    <div class="card-header" id="heading{{ forloop.index0 }}">
        <h4 class="mb-0">
            <button class="btn btn-link w-100" data-toggle="collapse" data-target="#collapse{{ forloop.index0 }}" aria-expanded="true" aria-controls="collapse{{ forloop.index0 }}">
                <div class="row">
                    <div class="col-24 text-center color-ftf-red">
                        <h3>{{ item.order }}</h3>
                    </div>
                    <div class="col-24 text-center">
                        <h3>{{ item.title }}</h3>
                    </div>
                </div>
            </button>
        </h4>
    </div>
    <div id="collapse{{ forloop.index0 }}" class="collapse" aria-labelledby="heading{{ forloop.index0 }}" data-parent="#accordion">
        <div class="card-body">
            <p>{{ item.description }}</p>
            <div class="mt-5 d-flex justify-content-center">
                {% include partials/ftf-pill.liquid text='Rrread more!' href=item.url %}
            </div>
        </div>
    </div>
</div>